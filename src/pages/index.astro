---
import BaseLayout from "../layouts/BaseLayout.astro";
const base = import.meta.env.BASE_URL || "/";
const posts = [
  { title: '¡Feliz día de la primavera!', href: `${base}relatos/feliz-dia-de-la-primavera/`, type: 'relato', excerpt: 'Un breve texto sobre flores, ciclos y amor propio.' },
  { title: 'Cuando el corazón sonríe', href: `${base}relatos/cuando-el-corazon-sonrie/`, type: 'relato', excerpt: 'Una conversación íntima que abre la puerta a la esperanza.' },
];
---
<BaseLayout>
  <section class="hero-card">
  <h1>ES FRANCO LITERATURA</h1>
    <p>Blog de poesía, relatos y cuentos por <strong>Emilio Sebastián Franco</strong>.</p>
  </section>

  <section>
    <h2>Entradas recientes</h2>
    <div class="grid">
      {posts.map((p) => (
        <a class="post-card" href={p.href}>
          <h3>{p.title}</h3>
          <p>{p.excerpt}</p>
          <span class="chip">{p.type}</span>
        </a>
      ))}
    </div>
  </section>

  <style>
  .hero-card{background:linear-gradient(135deg, rgba(139,92,246,.18), rgba(6,182,212,.16));border:1px solid var(--border);border-radius:18px;padding:2rem;box-shadow:var(--shadow)}
  .grid{display:grid;grid-template-columns:repeat(auto-fit,minmax(240px,1fr));gap:1rem}
  .post-card{display:block;background:var(--card);border:1px solid var(--border);border-radius:16px;padding:1rem;color:inherit;text-decoration:none;transition:transform var(--transition), border-color var(--transition), box-shadow var(--transition)}
  .post-card:hover{transform:translateY(-2px);border-color:rgba(99,102,241,.45);box-shadow:0 12px 26px rgba(2,6,23,.12)}
  .chip{display:inline-block;margin-top:.25rem;border:1px solid var(--border);border-radius:999px;padding:.18rem .55rem;color:var(--muted);font-size:.8rem}
  </style>
</BaseLayout>
