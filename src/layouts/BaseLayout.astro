---
interface Props {
  title?: string;
  description?: string;
  keywords?: string[];
  schema?: Record<string, any> | null;
  noindex?: boolean;
}
const { title = 'El rincón franco - La literatura desde mi verdad', description = 'La literatura desde mi verdad. Textos breves, poemas y relatos por Emilio Sebastián Franco.', keywords = ['poesía','relatos','cuentos','literatura','blog literario','Emilio Sebastián Franco'], schema = {
  '@context': 'https://schema.org',
  '@type': 'Blog',
  'url': 'https://emilioantunez.github.io/elrinconfranco/',
  'name': 'El rincón franco',
  'description': 'La literatura desde mi verdad. Textos por Emilio Sebastián Franco.',
  'author': { '@type': 'Person', 'name': 'Emilio Sebastián Franco' }
}, noindex = false } = Astro.props as Props;
import "../styles/global.css";
const base = import.meta.env.BASE_URL || "/";
---
<!doctype html>
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords.join(', ')} />
    <meta name="author" content="Emilio Sebastián Franco" />
  {noindex && (<meta name="robots" content="noindex, nofollow" />)}
  <link rel="icon" type="image/svg+xml" href={`${base}favicon.svg`} />
  <link rel="shortcut icon" type="image/svg+xml" href={`${base}favicon.svg`} />
  <meta property="og:type" content="website" />
  <meta property="og:site_name" content="El rincón franco" />
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <meta property="og:url" content="https://emilioantunez.github.io/elrinconfranco/" />
  <meta name="twitter:card" content="summary" />
    {schema && (
      <script type="application/ld+json">{JSON.stringify(schema)}</script>
    )}
  <style>
  /* Ajustes de marca: logo encima del título y centrado */
  /* Asegurar que el logo quede encima del título y centrado */
  .header > .brand{display:block !important;text-align:center !important}
  .brand-link{display:inline-flex !important;flex-direction:column !important;align-items:center !important;gap:.45rem;text-decoration:none;color:inherit}
  .brand img{height:64px;max-width:150px;display:block;margin:0 auto}
  .brand-title{margin:0;font-size:1.25rem}
  .brand-sub{margin:0;font-size:.9rem;color:var(--muted)}
  @media (max-width:640px){
    .brand img{height:50px}
    .brand-title{font-size:1.1rem}
  }
  </style>
  </head>
  <body>
    <header class="header container">
  <div class="brand">
    <a class="brand-link" href={base} aria-label="Ir al inicio">
      <img src={`${base}imagenes/franco.png`} alt="El rincón franco" />
      <div class="brand-text">
        <h1 class="brand-title">El rincón franco</h1>
        <p class="brand-sub">La literatura desde mi verdad</p>
      </div>
    </a>
  </div>
  <button class="nav-toggle" aria-expanded="false" aria-controls="site-nav">Menú</button>
  <nav id="site-nav" class="nav" data-open="false">
        <a href={`${base}poesia/`}>Poesía</a>
        <a href={`${base}relatos/`}>Relatos</a>
        <a href={`${base}acerca/`}>Acerca</a>
      </nav>
    </header>
    <main class="container">
      <slot />
    </main>
    <footer class="footer container">
      © {new Date().getFullYear()} Emilio Sebastián Franco — El rincón franco
    </footer>
    <script is:inline>
      (function(){
        const btn = document.querySelector('.nav-toggle');
        const nav = document.getElementById('site-nav');
        if(btn && nav){
          btn.addEventListener('click', () => {
            const open = nav.dataset.open === 'true';
            nav.dataset.open = (!open).toString();
            btn.setAttribute('aria-expanded', (!open).toString());
          });
        }
      })();
    </script>
  </body>
</html>
